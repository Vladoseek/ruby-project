<p class="post-title">Добавление нового поста</p>

<div class="container-info post-form p-2 mb-4">
    <%= form_for :post, url: posts_path do |f| %>

      <div class="mt-2">
        <label>Название</label>
        <%= f.text_field :title, class: "form-control"%>
      </div>

      <div class="form-group mt-3">
        <p>Краткая информация</p>
        <%= f.text_area :brief, class: "form-control"%>
      </div>

      <div class="mt-3 ">
        <p>Полная информация</p>
        <%= f.trix_editor :body, class: "form-control body-info"%>
      </div>

      <div class="mt-5">
        <label>Теги</label>
        <%= f.text_field :all_tags, class: "form-control"%>
      </div>

      <%= f.submit class: "btn btn-block btn-success mt-5"%>

    <% end %>

</div>

