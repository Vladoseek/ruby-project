
  <div class="mt-4 post-title">
    <%= @post.title %>
  </div>

  <div class="mt-5 post-body">
    <p><%= @post.body %></p>
  </div>

  <hr>

  <div class="row ml-5">
    <%= link_to "Редактировать", edit_post_path(@post),
                class: "mb-5 col-2 solid font-weight-bold text-center square_btn edit-button mr-3" %>

    <%= link_to "Удалить", post_path(@post), method: :delete, data: {confirm: "Хотите удалить статью?"},
                class: "mb-5 col-2 font-weight-bold text-center square_btn delete-button" %>
  </div>



